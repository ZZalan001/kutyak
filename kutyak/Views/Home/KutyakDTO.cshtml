@using kutyak.DTOs;
@{
    ViewData["Title"] = "Kutyák adatai DTO";
}
<h1>@ViewData["Title"]</h1>

<script type="text/javascript">
    function confirm_delete(id) {
        if (confirm("Töröljem a kiválasztott rekordot?")) {
            let url = "https://localhost:7263/api/kutya/" + id;
            let body = {};
            axios.delete(url, body).then((response) => {
                alert(response.data);
                window.location.reload();
            }).catch((error) => {
                alert(error);
            });
        }
        else {
            alert("Nem töröltam...");
        }
    }
</script>


<div>
    <button class="btn btn-warning btn-lg" title="Új kutya felvétele">
        <a asp-controller="Home" asp-action="KutyaKozmetika" asp-route-id="0">
        Új kutya felvétele
        </a>
    </button>
    <table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kutya neve</th>
            <th>Életkora</th>
            <th>Fajta</th>
            <th>Gazda neve</th>
            <th>Irányítószám</th>
            <th>Település</th>
            <th>Cím</th>
            <th>Chip száma</th>
            <th>Kép</th>
            <th>Műveletek</th>
        </tr>
    </thead>
    <tbody>
            @foreach(KutyakDTO kutya in Model)
            {
                <tr>
                    <td>@kutya.Id</td>
                    <td>@kutya.Nev</td>
                    <td>@kutya.Eletkor</td>
                    <td>@kutya.FajtaNev</td>
                    <td>@kutya.GazdaNev</td>
                    <td>@kutya.Irszam</td>
                    <td>@kutya.Telepules</td>
                    <td>@kutya.Lakcim</td>
                    <td>@kutya.ChipNumber</td>
                    <td>
                        <a asp-controller="Home" asp-action="KutyaKep" asp-route-id="@kutya.Id">
                            <img src=@Program.ImageConvert(kutya.IndexKep) width="64" />
                        </a>
                    </td>
                    <td>
                        <button class="btn btn-secondary btn-sm"> 
                            <a asp-controller="Home" asp-action="KutyaKozmetika" asp-route-id="@kutya.Id">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0                                         1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0                                            1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0                                    1-.468-.325" />
                                </svg>
                            </a>
                        </button>
                    
                       <button class="btn btn-secondary btn-sm" onclick="confirm_delete(@kutya.Id)">
                            
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0                                              1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1                                    1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                </svg>
                            
                        </button>
                    </td>
                </tr>
            }
        </tbody>
</table>
</div>